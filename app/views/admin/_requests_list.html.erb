<% if venue_requests.any? %>
  <div class="row">
    <% venue_requests.each do |request| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="card-title mb-0">
              <%= request.name %>
              <% if request.ownership_claim? %>
                <i class="fas fa-crown text-warning ms-1" title="Ownership Claim"></i>
              <% end %>
            </h6>
            <span class="badge bg-<%= status_color(request.status) %>">
              <%= request.status.humanize %>
            </span>
          </div>
          <div class="card-body">
            <% if request.existing_venue_claim? %>
              <p class="card-text">
                <strong>Claiming existing venue:</strong><br>
                <%= request.existing_venue.name if request.existing_venue %><br>
                <strong>Address:</strong> <%= request.full_address %>
              </p>
            <% else %>
              <p class="card-text">
                <strong>New venue request:</strong><br>
                <strong>Address:</strong> <%= request.full_address %>
              </p>
            <% end %>
            
            <p class="card-text">
              <strong>Type:</strong> <%= request.category.humanize %><br>
              <strong>Requested by:</strong> <%= request.requester_type.humanize %> #<%= request.requester_id %>
              <% if request.ownership_claim? %>
                <br><strong>Phone:</strong> <%= request.owner_phone %>
              <% end %>
            </p>
            <% if request.website.present? %>
              <p class="card-text">
                <strong>Website:</strong> 
                <%= link_to request.website, request.website, target: "_blank", rel: "noopener", class: "text-decoration-none" %>
              </p>
            <% end %>
            <% if request.ownership_claim? && request.utility_bill.attached? %>
              <p class="card-text">
                <strong>Verification Document:</strong><br>
                <%= link_to "View Document", url_for(request.utility_bill), 
                    target: "_blank", 
                    class: "btn btn-sm btn-outline-primary" %>
              </p>
            <% end %>
            <p class="card-text">
              <small class="text-muted">
                Requested <%= time_ago_in_words(request.created_at) %> ago
              </small>
            </p>
          </div>
          <div class="card-footer">
            <% if request.pending? %>
              <div class="btn-group w-100">
                <%= button_to "Approve", approve_venue_request_path(request), 
                    method: :patch, 
                    class: "btn btn-success btn-sm",
                    data: { 
                      confirm: request.existing_venue_claim? ? 
                        "Approve ownership claim for #{request.name}?" : 
                        "Create new venue #{request.name}?" 
                    } %>
                <%= button_to "Reject", reject_venue_request_path(request), 
                    method: :patch, 
                    class: "btn btn-danger btn-sm",
                    data: { 
                      confirm: "Are you sure you want to reject this venue request?" 
                    } %>
              </div>
            <% elsif request.approved? && request.venue_id %>
              <%= link_to "View Venue", venue_path(request.venue_id), class: "btn btn-primary btn-sm w-100" %>
            <% elsif request.rejected? %>
              <span class="text-muted">Rejected</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    <h4>No requests found</h4>
    <p>There are no venue requests matching your criteria.</p>
  </div>
<% end %>
