<% content_for :title, "Dashboard" %>

<% if artist_signed_in? %>
  <meta data-controller="bridge--notification-token">
<% end %>

<div class="container mb-3 pt-3" style="max-width: 500px;">
<div class="text-center mb-4">
  <div class="row g-2">
    <div class="col-6">
      <%= link_to "View Profile", artist_path(current_artist), class: "btn btn-primary w-100" %>
    </div>
    <div class="col-6">
      <%= link_to "Promo Flyer", promo_flyer_artist_path(current_artist), class: "btn btn-primary w-100" %>
    </div>
    <div class="col-6">
      <%= link_to "Add New Event", new_event_path, class: "btn btn-primary w-100" %>
    </div>
    <div class="col-6">
      <%= link_to "My Requests", artist_venue_requests_path, class: "btn btn-primary w-100" %>
    </div>
  </div>
</div>
  
  
  <h2 class="text-center mb-4">My Upcoming Events</h2>

  <% if @upcoming_events.any? %>
    <% @upcoming_events.each do |event| %>
      <% venue = event.venue %>
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h4 class="mb-3">
            <%= link_to venue.name, venue_path(venue), class: "text-decoration-none" %>
          </h4>

          <% if venue.full_address.present? %>
            <p class="mb-2">
              <%= link_to venue.full_address, "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(venue.full_address)}", target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>

          <p class="text-muted">
            <strong>Category:</strong> <%= event.category %>
          </p>

          <p class="mb-2">
            <strong>
              <%= event.date == Date.today ? "Today" : event.date.strftime("%B %-d, %Y") %>
              @ <%= event.start_time.strftime("%-I:%M %p") %>
              - <%= event.end_time.strftime("%-I:%M %p") %>
            </strong>
          </p>

          <%= link_to "View Event", event_path(event), class: "btn btn-outline-dark btn-sm mt-2" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-muted">No upcoming events.</p>
  <% end %>

  <h2 class="text-center mt-5 mb-4">My Past Events</h2>

  <% if @past_events.any? %>
    <% @past_events.each do |event| %>
      <% venue = event.venue %>
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h4 class="mb-3">
            <%= link_to venue.name, venue_path(venue), class: "text-decoration-none" %>
          </h4>

          <% if venue.full_address.present? %>
            <p class="mb-2">
              <%= link_to venue.full_address, "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(venue.full_address)}", target: "_blank", class: "text-decoration-none" %>
            </p>
          <% end %>

          <p class="text-muted">
            <strong>Category:</strong> <%= event.category %>
          </p>

          <p class="mb-2">
            <strong>
              <%= event.date.strftime("%B %-d, %Y") %>
              @ <%= event.start_time.strftime("%-I:%M %p") %>
              - <%= event.end_time.strftime("%-I:%M %p") %>
            </strong>
          </p>

          <%= link_to "View Event", event_path(event), class: "btn btn-outline-dark btn-sm mt-2" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-muted">No past events yet.</p>
  <% end %>
</div>




<!-- Favorite Artists -->
  <div class="mt-3 mb-5">
    <h5 class="text-primary text-center mb-4">
      <i class="fas fa-music me-2"></i> Favorite Artists
    </h5>

    <% if @favorite_artists.any? %>
      <div class="mx-auto" style="max-width: 500px;">
        <% @favorite_artists.each do |artist| %>
          <%= link_to artist_path(artist), class: "text-decoration-none" do %>
            <div class="card mb-3 shadow-sm text-center" 
                 style="cursor: pointer; transition: transform 0.2s, box-shadow 0.2s;"
                 onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.15)'"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1px 3px rgba(0,0,0,0.12)'">
              <div class="card-body d-flex flex-column align-items-center">
                <% if artist.image.attached? %>
                  <img src="<%= url_for(artist.image) %>" 
                       class="rounded-circle mb-2" 
                       style="width: 60px; height: 60px; object-fit: cover;">
                <% else %>
                  <i class="fas fa-user-circle fa-2x text-secondary mb-2"></i>
                <% end %>
                <h6 class="mb-1 text-dark"><%= artist.username %></h6>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted fst-italic text-center">You haven't followed any artists yet.</p>
    <% end %>
  </div>

  <!-- Favorite Venues -->
  <div class="mt-5">
    <h5 class="text-success text-center mb-4">
      <i class="fas fa-map-marker-alt me-2"></i> Favorite Venues
    </h5>

    <% if @favorite_venues.any? %>
      <div class="mx-auto" style="max-width: 500px;">
        <% @favorite_venues.each do |venue| %>
          <%= link_to venue_path(venue), class: "text-decoration-none" do %>
            <div class="card mb-3 shadow-sm text-center" 
                 style="cursor: pointer; transition: transform 0.2s, box-shadow 0.2s;"
                 onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.15)'"
                 onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 1px 3px rgba(0,0,0,0.12)'">
              <div class="card-body">
                <h6 class="mb-0 text-dark">
                  <i class="fas fa-microphone-alt me-2 text-muted"></i>
                  <%= venue.name %>
                </h6>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted fst-italic text-center">You haven't followed any venues yet.</p>
    <% end %>
  </div>
</div>
