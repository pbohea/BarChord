<% content_for :title, "Welcome!" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Welcome Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">Welcome to the BarChord!</h1>
        <p class="lead text-muted">Advertise your shows and draw bigger crowds</p>
      </div>

      <!-- How It Works Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-5">
          <h2 class="h3 mb-4 text-center">How It Works for Artists</h2>
          
          <div class="row g-4">
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-calendar-alt fa-3x text-primary"></i>
              </div>
              <h4 class="h5">Create Events</h4>
              <p class="text-muted">Post your upcoming shows and performances to let your fans know where you'll be playing next.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-users fa-3x text-success"></i>
              </div>
              <h4 class="h5">Build Your Following</h4>
              <p class="text-muted">Gain followers who will be automatically notified when you announce new events.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-map-marker-alt fa-3x text-warning"></i>
              </div>
              <h4 class="h5">Request Venues</h4>
              <p class="text-muted">Can't find a venue? Request to add new venues to the platform so you can create events there.</p>
            </div>
          </div>
        </div>
      </div>


      <!-- Getting Started -->
      <div class="card shadow-sm mb-5">
        <div class="card-body p-5 text-center">
          <h3 class="h4 mb-3">Ready to Get Started?</h3>
          <p class="text-muted mb-4">Head to your dashboard to start creating events, building your following, and connecting with your fans.</p>
          
          <%= link_to artist_dashboard_path(current_artist), class: "btn btn-primary btn-lg px-5" do %>
            <i class="fas fa-arrow-right me-2"></i>
            Go to My Dashboard
          <% end %>
        </div>
      </div>

</div>
