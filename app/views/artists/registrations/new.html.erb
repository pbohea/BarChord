<% content_for :title, "Artist Sign Up" %>

<div class="container my-5" style="max-width: 550px;">
  <div class="card shadow-sm border-0 rounded-4">
    <div class="card-header bg-gradient bg-info text-white text-center rounded-top-4">
      <h2 class="mb-0 fw-semibold">Sign Up as an Artist</h2>
      <p class="mb-0 small">Share your music, gain fans, and get booked</p>
    </div>

    <div class="card-body p-4">
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false } do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :firstname, class: "form-label fw-medium" %>
            <%= f.text_field :firstname, class: "form-control form-control-lg" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :lastname, class: "form-label fw-medium" %>
            <%= f.text_field :lastname, class: "form-control form-control-lg" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :username, "Display Name", class: "form-label fw-medium" %>
          <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "How your name will appear to users" %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :genre, "Music Genre", class: "form-label fw-medium" %>
            <%= f.select :genre, Artist::GENRES, {}, class: "form-select form-select-lg" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :performance_type, "Type", class: "form-label fw-medium" %>
            <%= f.select :performance_type, Artist::PERFORMANCE_TYPES, {}, class: "form-select form-select-lg" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :website, "Website", class: "form-label fw-medium" %>
          <%= f.text_field :website, class: "form-control form-control-lg", placeholder: "https://yourmusic.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :instagram_url, "Instagram URL", class: "form-label fw-medium" %>
          <%= f.text_field :instagram_url, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= f.label :youtube_url, "YouTube URL", class: "form-label fw-medium" %>
          <%= f.text_field :youtube_url, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= f.label :tiktok_url, "TikTok URL", class: "form-label fw-medium" %>
          <%= f.text_field :tiktok_url, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= f.label :spotify_url, "Spotify URL", class: "form-label fw-medium" %>
          <%= f.text_field :spotify_url, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-4" data-controller="image-preview">
          <%= f.label :image, "Profile Photo", class: "form-label fw-medium" %>

          <div data-image-preview-target="container" class="mb-2 d-none">
            <img data-image-preview-target="preview" class="img-thumbnail" style="max-width: 300px;" />
          </div>

          <% if f.object.persisted? && f.object.image.attached? %>
            <div class="mb-2">
              <%= image_tag f.object.image.variant(resize_to_limit: [300, 300]), class: "img-thumbnail" %>
            </div>
          <% end %>

          <%= f.file_field :image,
              accept: "image/jpeg,image/png",
              class: "form-control form-control-lg",
              data: { image_preview_target: "input", action: "image-preview#previewImage" } %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-medium" %>
          <%= f.email_field :email, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-medium" %>
          <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "new-password" %>
          <div class="form-text">
            Must be 8â€“20 characters, with at least one uppercase letter, one lowercase letter, and one number.
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "form-label fw-medium" %>
          <%= f.password_field :password_confirmation, class: "form-control form-control-lg", autocomplete: "new-password" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Create Account", class: "btn btn-info btn-lg shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
