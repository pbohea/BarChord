<div class="container my-5" style="max-width: 550px;">
  <div class="card shadow-lg">
    <div class="card-header bg-info text-white text-center">
      <h4 class="mb-0">Sign Up as an Artist</h4>
    </div>
    <div class="card-body">
      <%= form_with model: resource,
                    as: resource_name,
                    url: registration_path(resource_name),
                    local: true do |f| %>

        <%= devise_error_messages! %>

        <div class="mb-3">
          <%= f.label :firstname, class: "form-label" %>
          <%= f.text_field :firstname, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :lastname, class: "form-label" %>
          <%= f.text_field :lastname, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :username, "Display Name", class: "form-label" %>
          <%= f.text_field :username, class: "form-control", placeholder: "How your name will appear to users" %>
        </div>

        <div class="mb-3">
          <%= f.label :genre, "Music Genre", class: "form-label" %>
          <%= f.select :genre,
                ["Country", "Rock", "Alternative", "Jazz", "Electronic", "Hip-Hop", "Pop", "Folk"],
                {},
                class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :performance_type, "Performance Type", class: "form-label" %>
          <%= f.select :performance_type,
                ["Solo Guitar", "Solo Piano", "Band", "DJ"],
                {},
                class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :website, "Website", class: "form-label" %>
          <%= f.url_field :website, class: "form-control", placeholder: "https://yourmusic.com" %>
        </div>

        <div class="mb-3">
          <%= form.label :image, "Profile Photo", class: "form-label" %>

          <% if form.object.image.attached? %>
            <div class="mb-2">
              <%= image_tag form.object.image.variant(resize_to_limit: [300, 300]), class: "img-thumbnail" %>
            </div>
          <% end %>

          <%= form.file_field :image, 
        accept: "image/jpeg,image/png", 
        class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Create Account", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
