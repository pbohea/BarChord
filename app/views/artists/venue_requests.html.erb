<% content_for :title, "My Venue Requests" %>



<div class="container my-5" style="max-width: 720px;">
  <div class="text-center mb-4">
    <h1>My Venue Requests</h1>
 </div>

  <% if @venue_requests.any? %>
    <div class="row row-cols-1 g-3">
      <% @venue_requests.each do |request| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0"><%= request.name %></h5>
                <span class="badge bg-<%= request.status == 'pending' ? 'warning' : request.status == 'approved' ? 'success' : 'danger' %>">
                  <%= request.status.humanize %>
                </span>
              </div>
              
              <p class="card-text text-muted mb-2">
                <%= request.full_address %>
              </p>
              
              <div class="small text-muted mb-2">
                <strong>Category:</strong> <%= request.category.humanize %>
                <br>
                <strong>Submitted:</strong> <%= request.created_at.strftime("%B %d, %Y") %>
                <% if request.website.present? %>
                  <br>
                  <strong>Website:</strong> <%= link_to request.website, request.website, target: "_blank", class: "text-decoration-none" %>
                <% end %>
              </div>

              <% if request.notes.present? %>
                <p class="card-text"><small class="text-muted"><%= request.notes %></small></p>
              <% end %>

              <% if request.approved? && request.venue_id %>
                <div class="mt-2">
                  <%= link_to "View Venue", venue_path(request.venue_id), class: "btn btn-sm btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted mt-4">
      <p>You haven't submitted any venue requests yet. When you request a venue to be added to the app, the requests will show here. </p>
      <div class="mt-3">
        <%= link_to "Request a Venue", new_venue_request_path, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
