<div class="container my-4" style="max-width: 500px;">
  <div class="card shadow-sm">
    <div class="card-body">

      <div class="text-center mb-3">
        <% if @event.artist&.image.present? %>
          <img src="<%= @event.artist.image %>" alt="Artist Photo" class="rounded-circle mb-2" style="width: 100px; height: 100px; object-fit: cover;">
        <% else %>
          <div class="rounded-circle bg-secondary mb-2 d-flex align-items-center justify-content-center" style="width: 100px; height: 100px; color: white;">
            <i class="fas fa-user fa-lg"></i>
          </div>
        

        <h5>
          <%= link_to @event.artist.username, artist_path(@event.artist), class: "text-decoration-none" %>
        </h5>
        <% end %>
      </div>

      <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item">
          <strong>
            <%= link_to @event.venue.name,
                venue_path(@event.venue),
                data: {
                  turbo_frame: "venue_modal_frame",
                  bs_toggle: "modal",
                  bs_target: "#venueModal"
                },
                class: "text-decoration-none" %>
          </strong>
          <small class="text-muted">(<%= @event.venue.category %>)</small>
        </li>

        <li class="list-group-item">
          <strong> <%= @event.category %> </strong>
        </li>

        <li class="list-group-item">
          <strong>Date:</strong> <%= @event.date.strftime("%A, %B %-d") %><br>
          <strong>Time:</strong>
          <%= @event.start_time.strftime("%-I:%M %p") %> â€“ <%= @event.end_time.strftime("%-I:%M %p") %>
        </li>

        <li class="list-group-item">
          <strong>Location:</strong> <%= @event.indoors? ? "Indoors" : "Outdoors" %>
        </li>

        <li class="list-group-item">
          <strong>Cover Charge:</strong>
          <%= @event.cover? ? number_to_currency(@event.cover_amount || 5) : "No Cover" %>
        </li>
      </ul>

      <div class="d-grid">
        <button class="btn btn-primary" disabled>
          Go to this event (placeholder)
        </button>
      </div>

    </div>
  </div>

  <!-- Venue Modal (shell + Turbo target) -->
  <div class="modal fade" id="venueModal" tabindex="-1" aria-labelledby="venueModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <turbo-frame id="venue_modal_frame"></turbo-frame>
      </div>
    </div>
  </div>
