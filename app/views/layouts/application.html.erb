<!DOCTYPE html>
<html>
  <head>
    <% if user_signed_in? || artist_signed_in? %>
      <meta data-controller="bridge--notification-token">
    <% end %>
    <title><%= content_for(:title) || "LocalLive" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render "shared/head_assets" %>

    <!-- App styles -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <% if hotwire_native_app? %>
      <%= stylesheet_link_tag "native", "data-turbo-track": "reload" %>
    <% end %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/foot_assets" %>

    <div id="flash-overlay" style="position: fixed; top: 1rem; left: 50%; transform: translateX(-50%); z-index: 1050; width: auto; max-width: 90%;">
      <% flash.each do |key, message| %>
        <div
          class="alert alert-<%= key == "notice" ? "success" : "danger" %> alert-dismissible fade show text-center shadow"
          role="alert"
          data-controller="flash"
          data-flash-timeout-value="3000">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>

    <div class="container mt-3">
      <%= yield %>
    </div>
 <!-- âœ… This was missing -->

  </body>
</html>
