<%  content_for :title,  "Dashboard"%>
  
<% if owner_signed_in? %>
  <meta data-controller="bridge--notification-token">
<% end %>

<div class="container my-5" style="max-width: 720px;">
  <h1 class="text-center mb-4 mt-3">Welcome, <%= @owner.firstname || @owner.email %></h1>
<div class="d-flex flex-column align-items-center gap-3 mb-5">
  <%= link_to "Add an Event", new_event_path, class: "btn btn-primary w-100", style: "max-width: 300px;" %>
  <%= link_to "Add a Venue", new_venue_request_path, class: "btn btn-primary w-100", style: "max-width: 300px;" %>
  <%= link_to "Claim a Venue", claim_venue_requests_path, class: "btn btn-primary w-100", style: "max-width: 300px;" %>
  <%= link_to "My Requests", owner_venue_requests_path, class: "btn btn-outline-secondary w-100", style: "max-width: 300px;" %>
</div>

  <% if @venues.any? %>
    <h4 class="mb-3 text-center">Your Venues</h4>

    <div class="row row-cols-1 g-3">
      <% @venues.each do |venue| %>
        <div class="col d-flex justify-content-center">
          <div class="card shadow-sm" style="width: 100%; max-width: 500px;">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><%= venue.name %></h5>
                <div class="d-flex gap-2">
                  <%= link_to "View", venue_path(venue), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Edit", edit_venue_path(venue), class: "btn btn-sm btn-outline-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted mt-4">
      <p>Your venues will apear here. You havenâ€™t added any venues yet.</p>
    </div>
  <% end %>
</div>
