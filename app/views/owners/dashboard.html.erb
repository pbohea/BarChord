<div class="container my-5" style="max-width: 720px;">
  <h1 class="text-center mb-4">Welcome, <%= @owner.firstname || @owner.email %></h1>

  <div class="d-flex justify-content-center gap-3 mb-5 flex-wrap">
    <%= link_to "Add a Venue", new_venue_path, class: "btn btn-success" %>
    <%= link_to "Add an Event", new_event_path, class: "btn btn-primary" %>
  </div>

  <% if @venues.any? %>
    <h4 class="mb-3 text-center">Your Venues</h4>

    <div class="row row-cols-1 g-3">
      <% @venues.each do |venue| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-0"><%= venue.name %></h5>
              </div>
              <%= link_to "View", venue_path(venue), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted mt-4">
      <p>You havenâ€™t added any venues yet.</p>
    </div>
  <% end %>
</div>
