<% content_for :title, "Welcome Venue Owner!" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Welcome Header -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">Welcome to the Venue Owner Community!</h1>
        <p class="lead text-muted">Manage your venues and host amazing events</p>
      </div>

      <!-- How It Works Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-5">
          <h2 class="h3 mb-4 text-center">How It Works for Venue Owners</h2>
          
          <div class="row g-4">
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-building fa-3x text-primary"></i>
              </div>
              <h4 class="h5">Claim Your Venues</h4>
              <p class="text-muted">Find and claim ownership of your existing venues or add new ones to the platform.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-calendar-alt fa-3x text-success"></i>
              </div>
              <h4 class="h5">Host Events</h4>
              <p class="text-muted">Create events at your venues and collaborate with artists to fill your calendar.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-users fa-3x text-warning"></i>
              </div>
              <h4 class="h5">Build Your Following</h4>
              <p class="text-muted">Attract venue followers who get notified about events happening at your locations.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-5">
          <h3 class="h4 mb-4">What You Can Do</h3>
          
          <div class="row g-3">
            <div class="col-12">
              <div class="d-flex align-items-start">
                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                <div>
                  <h5 class="mb-1">Claim Venue Ownership</h5>
                  <p class="text-muted mb-0">Find your existing venues on the platform and submit ownership claims with verification documents.</p>
                </div>
              </div>
            </div>
            
            <div class="col-12">
              <div class="d-flex align-items-start">
                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                <div>
                  <h5 class="mb-1">Add New Venues</h5>
                  <p class="text-muted mb-0">Register new venues that aren't on the platform yet and become their official owner.</p>
                </div>
              </div>
            </div>
            
            <div class="col-12">
              <div class="d-flex align-items-start">
                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                <div>
                  <h5 class="mb-1">Create Events</h5>
                  <p class="text-muted mb-0">Schedule events at your venues and collaborate with artists to bring great shows to your space.</p>
                </div>
              </div>
            </div>
            
            <div class="col-12">
              <div class="d-flex align-items-start">
                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                <div>
                  <h5 class="mb-1">Manage Your Properties</h5>
                  <p class="text-muted mb-0">Keep your venue information updated and manage multiple properties from one dashboard.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Getting Started -->
      <div class="card shadow-sm mb-5">
        <div class="card-body p-5 text-center">
          <h3 class="h4 mb-3">Ready to Get Started?</h3>
          <p class="text-muted mb-4">Head to your dashboard to start claiming venues, creating events, and managing your properties.</p>
          
          <%= link_to owner_dashboard_path(current_owner), class: "btn btn-primary btn-lg px-5" do %>
            <i class="fas fa-arrow-right me-2"></i>
            Go to My Dashboard
          <% end %>
        </div>
      </div>

      <!-- Quick Tips -->
      <div class="card bg-light border-0 mb-4">
        <div class="card-body p-4">
          <h4 class="h5 mb-3">
            <i class="fas fa-lightbulb text-warning me-2"></i>
            Quick Tips for Venue Owners
          </h4>
          <ul class="mb-0 text-muted">
            <li class="mb-2">Use the venue claim feature to take ownership of your existing venues</li>
            <li class="mb-2">Upload utility bills or other verification documents for faster approval</li>
            <li class="mb-2">Add new venues if they're not already on the platform</li>
            <li>Keep your venue details accurate and up-to-date for better event promotion</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
