<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Sign In</h2>

  <%= form_with url: login_path, method: :post, local: true, class: "needs-validation" do %>
    <div class="mb-3">
      <%= label_tag :email, "Email", class: "form-label" %>
      <%= email_field_tag :email, params[:email], class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= label_tag :password, "Password", class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control", required: true %>
    </div>

    <div class="d-grid">
      <%= submit_tag "Sign In", class: "btn btn-primary", data: {controller: "bridge--button"} %>
    </div>
  <% end %>
</div>
