<% if owner_signed_in? || artist_signed_in? || user_signed_in? %>
  <div class="offcanvas offcanvas-end" tabindex="-1" id="accountMenu" aria-labelledby="accountMenuLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="accountMenuLabel">
        <% if owner_signed_in? %>
          <%= current_owner.firstname || current_owner.email %>
        <% elsif artist_signed_in? %>
          <%= current_artist.username || current_artist.email %>
        <% elsif user_signed_in? %>
          <%= current_user.username || current_user.email %>
        <% end %>
      </h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body">
      <% if owner_signed_in? %>
        <%= link_to "Dashboard", owner_dashboard_path(current_owner), class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Edit Profile", edit_owner_registration_path, class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Sign Out", destroy_owner_session_path, method: :delete, class: "btn btn-link d-block text-danger", data: { bs_dismiss: "offcanvas" } %>

      <% elsif artist_signed_in? %>
        <%= link_to "My Events", artist_events_path, class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Edit Profile", edit_artist_registration_path, class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Sign Out", destroy_artist_session_path, method: :delete, class: "btn btn-link d-block text-danger", data: { bs_dismiss: "offcanvas" } %>

      <% elsif user_signed_in? %>
        <%= link_to "Dashboard", user_dashboard_path(current_user), class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-link d-block mb-2", data: { bs_dismiss: "offcanvas" } %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-link d-block text-danger", data: { bs_dismiss: "offcanvas" } %>
      <% end %>
    </div>
  </div>
<% end %>

<!-- ðŸ”µ Sign In Modal -->
<div class="modal fade" id="signinModal" tabindex="-1" aria-labelledby="signinModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signinModalLabel">Sign In As</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-grid gap-2">
        <%= link_to "User", new_user_session_path, class: "btn btn-outline-primary" %>
        <%= link_to "Owner", new_owner_session_path, class: "btn btn-outline-success" %>
        <%= link_to "Artist", new_artist_session_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>

<!-- ðŸ”µ Sign Up Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupModalLabel">Sign Up As</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-grid gap-2">
        <%= link_to "User", new_user_registration_path, class: "btn btn-outline-primary" %>
        <%= link_to "Owner", new_owner_registration_path, class: "btn btn-outline-success" %>
        <%= link_to "Artist", new_artist_registration_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>
