<!-- Add this JavaScript to handle the modal/offcanvas interaction -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get references to the offcanvas and modals
    const offcanvasEl = document.getElementById('accountMenu');
    const signinModalEl = document.getElementById('signinModal');
    const signupModalEl = document.getElementById('signupModal');

    if (offcanvasEl && signinModalEl && signupModalEl) {
      const offcanvas = new bootstrap.Offcanvas(offcanvasEl);

      // Handle Sign In button click
      const signinBtn = offcanvasEl.querySelector('[data-bs-target="#signinModal"]');
      if (signinBtn) {
        signinBtn.addEventListener('click', function(e) {
          e.preventDefault();
          // Hide offcanvas first
          offcanvas.hide();
          // Wait for offcanvas to fully close before showing modal
          offcanvasEl.addEventListener('hidden.bs.offcanvas', function showModal() {
            const modal = new bootstrap.Modal(signinModalEl);
            modal.show();
            // Remove this event listener after use
            offcanvasEl.removeEventListener('hidden.bs.offcanvas', showModal);
          }, { once: true });
        });
      }

      // Handle Sign Up button click
      const signupBtn = offcanvasEl.querySelector('[data-bs-target="#signupModal"]');
      if (signupBtn) {
        signupBtn.addEventListener('click', function(e) {
          e.preventDefault();
          // Hide offcanvas first
          offcanvas.hide();
          // Wait for offcanvas to fully close before showing modal
          offcanvasEl.addEventListener('hidden.bs.offcanvas', function showModal() {
            const modal = new bootstrap.Modal(signupModalEl);
            modal.show();
            // Remove this event listener after use
            offcanvasEl.removeEventListener('hidden.bs.offcanvas', showModal);
          }, { once: true });
        });
      }
    }
  });
</script>

