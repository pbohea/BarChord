<nav class="navbar d-hotwire-native-none bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">LocalLive</a>

    <!-- Toggler now opens offcanvas -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#accountMenu" aria-controls="accountMenu" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<% if owner_signed_in? || artist_signed_in? || user_signed_in? %>
  <!-- Offcanvas for signed-in users -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="accountMenu" aria-labelledby="accountMenuLabel">
    <div class="offcanvas-header justify-content-center">
      <h5 class="offcanvas-title text-center" id="accountMenuLabel">
        <% if owner_signed_in? %>
          <%= current_owner.firstname || current_owner.email %>
        <% elsif artist_signed_in? %>
          <%= current_artist.username || current_artist.email %>
        <% elsif user_signed_in? %>
          <%= current_user.username || current_user.email %>
        <% end %>
      </h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column">
      <%= link_to "Home", root_path, class: "btn d-block btn-outline-primary mb-2", data: { turbo: true } %>

      <% if owner_signed_in? %>
        <%= link_to "Dashboard", owner_dashboard_path(current_owner), class: "btn d-block btn-outline-primary mb-2", data: { turbo: true } %>
        <%= link_to "Edit Profile", edit_owner_registration_path, class: "btn d-block btn-outline-primary mb-2", data: { turbo: true } %>
        <%= link_to "Sign Out", destroy_owner_session_path, method: :delete, class: "btn d-block btn-outline-primary text-danger mb-2", data: { turbo: true } %>
        <div class="mt-auto text-center">
          <%= link_to "About LocalLive", about_path, class: "text-primary text-decoration-none fw-semibold" %>
        </div>

      <% elsif artist_signed_in? %>
        <%= link_to "My Events", artist_events_path, class: "btn btn-outline-primary", data: { turbo: true } %>
        <%= link_to "Edit Profile", edit_artist_registration_path, class: "btn btn-outline-primary", data: { turbo: true } %>
        <%= link_to "Sign Out", destroy_artist_session_path, method: :delete, class: "btn btn-outline-primary text-danger", data: { turbo: true } %>
        <%= link_to "About", about_path, class: "btn btn-outline-primary" %>

      <% elsif user_signed_in? %>
        <%= link_to "Dashboard", user_dashboard_path(current_user), class: "btn btn-link d-block mb-2", data: { turbo: true } %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-link d-block mb-2", data: { turbo: true } %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-link d-block text-danger", data: { turbo: true } %>
        <%= link_to "About", about_path, class: "btn btn-outline-primary" %>

      <% end %>
    </div>
  </div>
<% else %>
  <!-- Offcanvas for guest users -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="accountMenu" aria-labelledby="accountMenuLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="accountMenuLabel">Welcome</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-grid gap-2">
      <%= button_tag "Sign In", type: "button", class: "btn btn-outline-primary", data: { bs_toggle: "modal", bs_target: "#signinModal" } %>
      <%= button_tag "Sign Up", type: "button", class: "btn btn-outline-secondary", data: { bs_toggle: "modal", bs_target: "#signupModal" } %>
      <%= link_to "About", about_path, class: "btn btn-outline-primary" %>

    </div>
  </div>
<% end %>

<!-- Sign In Modal -->
<div class="modal fade" id="signinModal" data-turbo="false" tabindex="-1" aria-labelledby="signinModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signinModalLabel">Sign In As</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-grid gap-2">
        <%= link_to "User", new_user_session_path, class: "btn btn-outline-primary" %>
        <%= link_to "Owner", new_owner_session_path, class: "btn btn-outline-success" %>
        <%= link_to "Artist", new_artist_session_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>

<!-- Sign Up Modal -->
<div class="modal fade" id="signupModal" data-turbo="false" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupModalLabel">Sign Up As</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-grid gap-2">
        <%= link_to "User", new_user_registration_path, class: "btn btn-outline-primary" %>
        <%= link_to "Owner", new_owner_registration_path, class: "btn btn-outline-success" %>
        <%= link_to "Artist", new_artist_registration_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>
