<% content_for :title, "Welcome!" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Welcome Header -->
      <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary mb-3">Welcome to BarChord!</h1>
        <p class="lead text-muted">Discover new artists and venues, or follow your old favorites</p>
      </div>

      <!-- Getting Started -->

        <div class="card-body mb-5 text-center">

          <%= link_to user_dashboard_path(current_user), class: "btn btn-primary btn-lg px-5" do %>
            Get Started
            <i class="fas fa-arrow-right me-2"></i>
          <% end %>
        </div>

      <!-- How It Works Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-5">
          <h2 class="h3 mb-4 text-center">How It Works</h2>
          
          <div class="row g-4">
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-users fa-3x text-primary"></i>
              </div>
              <h4 class="h5">Follow Artists</h4>
              <p class="text-muted">Discover and follow your favorite artists to stay updated on their latest events and performances.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-calendar-alt fa-3x text-success"></i>
              </div>
              <h4 class="h5">Find Events</h4>
              <p class="text-muted">Browse upcoming events, discover new venues, and never miss out on the shows you love.</p>
            </div>
            
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-bell fa-3x text-warning"></i>
              </div>
              <h4 class="h5">Get Notified</h4>
              <p class="text-muted">Receive push notifications when artists you follow announce new events or when venues you love host shows.</p>
            </div>
          </div>
        </div>
      </div>

      
</div>
