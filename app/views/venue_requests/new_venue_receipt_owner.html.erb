<% content_for :title, "New Venue Request Submitted" %>

<div class="container pt-4" style="max-width: 600px;">
  <div class="text-center mb-4">
    <div class="alert alert-success border-0 shadow-sm">
      <div class="mb-3">
        <i class="fas fa-check-circle fa-3x text-success"></i>
      </div>
      <h2 class="alert-heading mb-3">New Venue Request Submitted!</h2>
    </div>
  </div>

  <!-- Venue Details Card -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0">
        <i class="fas fa-plus-circle me-2"></i>
        New Venue Details
      </h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <h4 class="text-primary mb-3"><%= @venue_request.name %></h4>

          <div class="mb-3">
            <strong>Address:</strong><br>
            <%= @venue_request.full_address %>
          </div>

          <div class="mb-3">
            <strong>Category:</strong>
            <span class="badge bg-secondary"><%= @venue_request.category %></span>
          </div>

          <% if @venue_request.website.present? %>
            <div class="mb-3">
              <strong>Website:</strong>
              <%= link_to @venue_request.website, @venue_request.website, target: "_blank", class: "text-decoration-none" %>
            </div>
          <% end %>

          <div class="mb-3">
            <strong>Contact Phone:</strong> <%= @venue_request.owner_phone %>
          </div>

          <div class="mb-3">
            <strong>Request ID:</strong>
            <code>#<%= @venue_request.id %></code>
          </div>

          <div>
            <strong>Submitted:</strong>
            <%= @venue_request.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- What Happens Next -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">
        <i class="fas fa-clock me-2"></i>
        What Happens Next?
      </h5>
    </div>
    <div class="card-body">
      <div class="timeline">
        <div class="timeline-item d-flex mb-3">
          <div class="timeline-marker me-3">
            <i class="fas fa-check-circle text-success"></i>
          </div>
          <div>
            <strong>Request Submitted</strong><br>
            <small class="text-muted">Your new venue request has been received and is in our review queue</small>
          </div>
        </div>

        <div class="timeline-item d-flex mb-3">
          <div class="timeline-marker me-3">
            <i class="fas fa-search text-warning"></i>
          </div>
          <div>
            <strong>Under Review</strong><br>
            <small class="text-muted">Our team will verify the venue information and your ownership documentation</small>
          </div>
        </div>

        <div class="timeline-item d-flex mb-3">
          <div class="timeline-marker me-3">
            <i class="fas fa-plus text-info"></i>
          </div>
          <div>
            <strong>Venue Creation</strong><br>
            <small class="text-muted">If approved, we'll create the new venue listing in our system</small>
          </div>
        </div>

        <div class="timeline-item d-flex mb-3">
          <div class="timeline-marker me-3">
            <i class="fas fa-envelope text-info"></i>
          </div>
          <div>
            <strong>Email Notification</strong><br>
            <small class="text-muted">You'll receive an email with the approval decision</small>
          </div>
        </div>

        <div class="timeline-item d-flex">
          <div class="timeline-marker me-3">
            <i class="fas fa-crown text-primary"></i>
          </div>
          <div>
            <strong>Venue Access</strong><br>
            <small class="text-muted">If approved, you'll gain full management access to your new venue</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Important Information -->
  <div class="card mb-4">
    <div class="card-header">
      <h6><i class="fas fa-info-circle me-2"></i>Important Information</h6>
    </div>
    <div class="card-body">
      <ul class="mb-0">
        <li><strong>Review Time:</strong> Most new venue requests are reviewed within 1-3 business days</li>
        <li><strong>Email Updates:</strong> We'll send updates to your registered email address</li>
        <li><strong>Questions?</strong> Contact our support team if you have any concerns</li>
        <li><strong>Reference ID:</strong> Keep your request ID <code>#<%= @venue_request.id %></code> for your records</li>
      </ul>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="text-center mb-4">
    <% if owner_signed_in? %>
      <%= link_to "Return to Dashboard", owner_dashboard_path, class: "btn btn-primary me-3" %>
    <% elsif artist_signed_in? %>
      <%= link_to "Return to Dashboard", artist_dashboard_path, class: "btn btn-primary me-3" %>
    <% else %>
    <% end %>
  </div>
</div>

<style>
  .timeline-marker {
    width: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timeline-item:not(:last-child) {
    position: relative;
  }

  .timeline-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 11px;
    top: 24px;
    width: 2px;
    height: 100%;
    background-color: #dee2e6;
  }
</style>
