<% content_for :title, @venue.name %>

<div class="container my-4" style="max-width: 500px;">
  <div class="card shadow-sm">
    <div class="card-body text-center">

      <% if @venue.image.present? %>
        <img src="<%= url_for(@venue.image) %>" alt="Artist Photo" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
      <% else %>
        <div class="rounded-circle bg-secondary mb-3 d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; color: white;">
          <i class="fas fa-user fa-2x"></i>
        </div>
      <% end %>
      <% if @venue.website.present? %>
        <p>
          <%= link_to @venue.name, @venue.website, target: "_blank", rel: "noopener", class: "btn btn-sm btn-outline-dark" %>
        </p>
      <% else %>
        <p>
          <%= @venue.name %>
        </p>
      <% end %>
      <% if @venue.full_address.present? %>
        <p class="mb-2">
          <%= @venue.full_address %>
        </p>
      <% end %>

      <p class="text-muted mt-3">
        <%= @venue.category %>
      </p>

      <% unless owner_signed_in? %>

        <turbo-frame id="follow_button_<%= @venue.id %>" >
          <%= render partial: "venues/follow_button", locals: { venue: @venue } %>
        </turbo-frame>

      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <h5 class="text-center text-muted mb-3">Upcoming Events</h5>

    <% if @upcoming_events.any? %>
      <ul class="list-group">
        <% @upcoming_events.each do |event| %>
          <li class="list-group-item text-center p-3" style="cursor: pointer;" onclick="window.location='<%= event_path(event) %>'">
            <strong><%= event.date.strftime("%A, %B %-d") %></strong><br>
            <small>
              <%= event.start_time.strftime("%-I:%M %p") %><br>

              <%= link_to event.artist.username, artist_path(event.artist),
                    class: "text-decoration-none",
                    onclick: "event.stopPropagation(); event.stopImmediatePropagation();" %>
            </small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted text-center">No upcoming events.</p>
    <% end %>
  </div>
</div>

<!-- Modal if not signed in -->
<div class="modal fade" id="authModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body text-center">
        <p class="mb-3">Sign in or sign up to add this venue to your favorites.</p>
        <div class="d-flex justify-content-center gap-2">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary", data: { turbo: false } %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary", data: { turbo: false } %>
        </div>
      </div>
    </div>
  </div>
</div>
